{
  "name": "herd-xdebug-toggler",
  "displayName": "Herd Xdebug Toggler",
  "description": "Enable or disable Xdebug extention for Herd",
  "publisher": "Patrick Levesque",
  "version": "1.0.1",
  "icon": "herd-xdebug-toggler.png",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:php",
    "workspaceContains:composer.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "herd-xdebug-toggler.enableXdebug",
        "title": "Enable Xdebug"
      },
      {
        "command": "herd-xdebug-toggler.disableXdebug",
        "title": "Disable Xdebug"
      }
    ],
    "configuration": {
      "title": "Herd Xdebug Toggler",
      "properties": {
          "herdXdebugToggler.phpVersions": {
              "type": "array",
              "default": ["7.4", "8.0", "8.1", "8.2", "8.3"],
              "description": "PHP versions to display when enabling or disabling Xdebug"
          }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
