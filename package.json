{
  "name": "herd-xdebug-toggler",
  "displayName": "Herd Xdebug Toggler",
  "description": "Enable or disable Xdebug extention for Herd",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "herd-xdebug-toggler.enableXdebug",
        "title": "Enable XDebug"
      },
      {
        "command": "herd-xdebug-toggler.disableXdebug",
        "title": "Disable XDebug"
      }
    ],
    "configuration": {
      "title": "Herd Xdebug Toggler",
      "properties": {
          "herdXdebugToggler.phpVersions": {
              "type": "array",
              "default": ["7.4", "8.0", "8.1", "8.2", "8.3"],
              "description": "PHP versions to display when enabling or disabling XDebug"
          }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
